# Production Environment Configuration
# Copy this file to your production server as .env

# Application Environment
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://partsbot:your_production_db_password@localhost:5432/china_car_parts_production

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_production_bot_token
ADMIN_TELEGRAM_IDS=your_telegram_id

# FastAPI Configuration
SECRET_KEY=your_production_secret_key_32_chars_long
JWT_SECRET_KEY=your_production_jwt_secret_key_32_chars_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Frontend Configuration
FRONTEND_ORIGIN=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4

# Logging Configuration
LOG_FILE=/var/log/china-car-parts-production/app.log
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=90

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance Configuration
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/backups/china-car-parts-production

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=100

# External API Configuration (if needed)
OPENAI_API_KEY=your_openai_api_key
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3

# File Storage Configuration
UPLOAD_PATH=/opt/china-car-parts-production/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=100

# Feature Flags
FEATURE_AI_SEARCH=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_REAL_TIME_UPDATES=true

# Development Tools (disabled in production)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_PERFORMANCE_PROFILING=false

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
BLUE_PORT=8001
GREEN_PORT=8002

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Error Tracking (if using Sentry)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# CDN Configuration (if using CDN)
CDN_ENABLED=true
CDN_URL=https://cdn.yourdomain.com
CDN_CACHE_TTL=31536000  # 1 year

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Read Replicas (if using)
DATABASE_READ_REPLICA_URL=postgresql://partsbot:your_production_db_password@read-replica:5432/china_car_parts_production

# High Availability Configuration
HA_ENABLED=true
HA_HEALTH_CHECK_INTERVAL=10
HA_FAILOVER_THRESHOLD=3

# Disaster Recovery Configuration
DR_ENABLED=true
DR_BACKUP_INTERVAL=3600  # 1 hour
DR_RETENTION_HOURS=168   # 1 week
