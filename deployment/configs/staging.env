# Staging Environment Configuration
# Copy this file to your staging server as .env

# Application Environment
APP_ENV=staging
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://partsbot:your_staging_db_password@localhost:5432/china_car_parts_staging

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_staging_bot_token
ADMIN_TELEGRAM_IDS=your_telegram_id

# FastAPI Configuration
SECRET_KEY=your_staging_secret_key_32_chars_long
JWT_SECRET_KEY=your_staging_jwt_secret_key_32_chars_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Frontend Configuration
FRONTEND_ORIGIN=https://staging.yourdomain.com
CORS_ORIGINS=https://staging.yourdomain.com,http://localhost:5173,http://127.0.0.1:5173

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=2

# Logging Configuration
LOG_FILE=/var/log/china-car-parts-staging/app.log
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/opt/backups/china-car-parts-staging

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# External API Configuration (if needed)
OPENAI_API_KEY=your_openai_api_key
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3

# File Storage Configuration
UPLOAD_PATH=/opt/china-car-parts-staging/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# Feature Flags
FEATURE_AI_SEARCH=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_REAL_TIME_UPDATES=false

# Development Tools (staging only)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_PERFORMANCE_PROFILING=false
