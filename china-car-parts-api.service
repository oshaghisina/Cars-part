[Unit]
Description=China Car Parts API
After=network.target

[Service]
Type=simple
User=sinaoshaghi
WorkingDirectory=/Users/sinaoshaghi/Projects/China Car Parts
Environment=PATH=/Users/sinaoshaghi/Projects/China Car Parts/venv/bin
Environment=APP_ENV=production
Environment=DEBUG=false
Environment=DATABASE_URL=sqlite:///./data/app.db
Environment=SECRET_KEY=your_production_secret_key_32_chars_long
Environment=JWT_SECRET_KEY=your_production_jwt_secret_key_32_chars_long
Environment=FRONTEND_ORIGIN=http://localhost:8001
Environment=API_HOST=0.0.0.0
Environment=API_PORT=8001
ExecStart=/Users/sinaoshaghi/Projects/China Car Parts/venv/bin/uvicorn app.api.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10
StandardOutput=append:/Users/sinaoshaghi/Projects/China Car Parts/logs/api.log
StandardError=append:/Users/sinaoshaghi/Projects/China Car Parts/logs/api-error.log

[Install]
WantedBy=multi-user.target
